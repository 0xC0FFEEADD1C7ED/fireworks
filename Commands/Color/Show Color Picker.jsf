selection_attr = fw.selection[0].pathAttributes;
choice = fw.popupColorPickerOverMouse("#000000", true, false);
if (choice == "#ffffff") {
  // Stupid Fireworks bug
  selection_attr.fillColor = "#fffff0";
  selection_attr.fillColor = "#ffffff";
} else {
  selection_attr.fillColor = choice;
}