Pastes the guides copied with the "Guides Â» Copy" command (works accross documents!).
**DOC**/

try {
  fw.runScript(fw.appJsCommandsDir + "/bs.js");
} catch(e){
  alert("This command requires the bs.js library\rGet it at http://github.com/bomberstudios/fireworks/");
};

doc = fw.getDocumentDOM();
fileURL = Files.makePathFromDirAndFile(fw.userJsCommandsDir,'guides.txt');

file = Files.open(fileURL, false);

if (file) {
  try {
    vGuides = file.readline().split(',');
  } catch (exception) {
    // no vGuides
  }
  try {
    hGuides = file.readline().split(',');
  } catch (exception) {
    // no hGuides
  }
  if (vGuides && vGuides != "") {
    for (var k = vGuides.length - 1; k >= 0; k--){
      doc.addGuide(vGuides[k],"vertical");
    };
  };
  if (hGuides && hGuides != "") {
    for (var l = hGuides.length - 1; l >= 0; l--){
      doc.addGuide(hGuides[l],"horizontal");
    };
  };
  file.close();
};
