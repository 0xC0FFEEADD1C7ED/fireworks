var doc = fw.getDocumentDOM();
for (var l=0; l < doc.layers.length; l++) {
  doc.selectAllOnLayer(l,true);
}
var doc_height = Selection.bottom();
doc.setDocumentCanvasSize({left:0, top: 0, right: doc.width, bottom: doc_height}, true);
